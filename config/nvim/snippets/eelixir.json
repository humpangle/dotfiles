{
  "<%": {
    "prefix": ["<%", "render"],
    "body": "<%= $0   %>",
    "description": "<%"
  },
  "for": {
    "prefix": "for",
    "body": ["<%= for ${1:item} <- ${2:items} do %>", "  $0", "<% end %>"],
    "description": "for loop"
  },
  "if": {
    "prefix": "if",
    "body": ["<%= if ${1} do %>", "  $0", "<% end %>"],
    "description": "if"
  },
  "ife": {
    "prefix": "if_else",
    "body": ["<%= if ${1} do %>", "  $2", "<% else %>", "  $0", "<% end %>"],
    "description": "If else"
  },
  "link": {
    "prefix": "link",
    "body": "<%= link \"${1:Submit}\", to: ${2:\"/users\"}, method: ${3::delete} %>",
    "description": "link tag"
  },
  "link_l": {
    "prefix": ["link_live_view", "live_view_link"],
    "body": [
      "<%= live_patch(",
      "  \"${1:text}\",",
      "  to:",
      "    Routes.${2:post_index}_path(",
      "      @socket, ",
      "      ${3::method_name}${0:, resource}",
      "    )",
      ") %>"
    ],
    "description": "Live_path liveview link"
  },
  "Live component": {
    "prefix": ["live_component"],
    "body": [
      "<.live_component",
      "  module={${0:module_name}\\}",
      "  id={@post.id || :new}",
      "  title={@page_title}",
      "  action={@live_action}",
      "  post={@post}",
      "  return_to={Routes.post_index_path(@socket, :index)}",
      "/>"
    ],
    "description": "Live component"
  }
}
