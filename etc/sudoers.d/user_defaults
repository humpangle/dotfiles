# Defaults	editor=/usr/local/bin/nvim
# Allow normal user to start cron job in .bashrc
# %sudo ALL=NOPASSWD: /etc/init.d/cron start

# grant passwordless access to dockerd for group docker users
# %docker ALL=(ALL)  NOPASSWD: /usr/bin/dockerd
# username ALL=(ALL)  NOPASSWD: /usr/bin/dockerd
Defaults	editor=/usr/bin/nvim

Cmnd_Alias DOCKER_CMD = /usr/bin/docker inspect *

%username ALL=(ALL)  NOPASSWD: /home/username/dotfiles/etc/wsl-nameserver.sh
%username ALL=(ALL)  NOPASSWD: /home/username/dotfiles/etc/wsl-drop-caches.sh
%username ALL=(ALL)  NOPASSWD: /usr/bin/chown
%username ALL=(ALL)  NOPASSWD: /usr/local/bin/mkcert
%username ALL=(ALL)  NOPASSWD: DOCKER_CMD
