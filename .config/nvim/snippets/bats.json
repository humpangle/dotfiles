{
  "Snippet bats shebang": {
    "prefix": [
      "bats_shebang",
      "shebang_bats"
    ],
    "body": [
      "#!/usr/bin/env bats"
    ],
    "description": [
      "Snippet bats shebang"
    ]
  },
  "Snippet bats @test": {
    "prefix": [
      "test_bats",
      "bats_test"
    ],
    "body": [
      "@test \"${1:description of test}\" {",
      "  $0",
      "}"
    ],
    "description": [
      "Snippet bats @test"
    ]
  },
  "Snippet bats echo debug": {
    "prefix": [
      "bats_echo_debug",
      "echo_bats_debug",
      "echo_debug_bats",
      "debug_echo_bats"
    ],
    "body": [
      "echo -e \"\\n# /START/ Debugging \\$BATS_TEST_NAME\\n${1:var} ${2:description} => \\$${1:var}$0\" >&3",
      "echo -e \"# /END/ Debugging \\$BATS_TEST_NAME\\n\" >&3"
    ],
    "description": [
      "Snippet bats echo debug"
    ]
  },
  "Snippet bats cat debug": {
    "prefix": [
      "bats_cat_debug",
      "cat_bats_debug",
      "cat_debug_bats",
      "debug_cat_bats"
    ],
    "body": [
      "echo -e \"\\n# /START/ Debugging \\$BATS_TEST_NAME\\ncat file ${1:description} =>\" >&3",
      "cat \"${2:\\$var_or_filename}\" >&3",
      "echo -e \"# /END/ cat file ${1:description}\" >&3",
      "echo -e \"# /END/ Debugging \\$BATS_TEST_NAME\\n\" >&3"
    ],
    "description": [
      "bats cat debug"
    ]
  },
  "Snippet bats tag focus": {
    "prefix": [
      "tag_focus",
      "focus_tag"
    ],
    "body": [
      "# bats test_tags=bats:focus"
    ],
    "description": [
      "Bats tag focus"
    ]
  }
}
