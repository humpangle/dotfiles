{
  "rest": {
    "prefix": ["rest_console_snippet", "vim_rest_console_snippet"],
    "body": [
      "# A VRC buffer can have one or many REST request blocks.",
      "# A request block contains",
      "  # a host",
      "  # optional cUrl options",
      "  # optional headers",
      "  # one ore more queries",
      "  # optional request body (usually used by POST) for each query",
      "",
      "# There is also the concept of global definitions - see below",
      "",
      "# GETTING FROM RESOURCE.",
      "http://example.com",
      "GET /path/to/resource?key=value",
      "",
      "# POSTing to an ElasticSearch service.",
      "http://example.com/elasticsearch",
      "",
      "// Specify optional headers.",
      "Content-Type: application/json; charset=utf-8",
      "",
      "# Query",
      "POST /index/type?pretty",
      "{",
      "  \"key\": \"a key\",",
      "  \"value\": \"a value\"",
      "}",
      "",
      "# Submitting a form.",
      "https://example.net:8080",
      "",
      "Accept: */*",
      "Authorization: Basic QWxhZGRpbjpvcGVuIHNlc2FtZQ==",
      "Cache-Control: no-cache",
      "Connection: keep-alive",
      "Content-Type: application/x-www-form-urlencoded",
      "Cookie: userId=ac32:dfbe:8f1a:249c; sid=cfb48e3d98fcb1",
      "User-Agent: VRC",
      "",
      "POST /form",
      "var1=value of var1&",
      "var2=value of var2",
      "",
      "# Bulk upload",
      "http://localhost:9200",
      "POST /testindex/_bulk",
      "{ \"index\": { \"_index\": \"test\", \"_type\": \"product\" } }",
      "{ \"sku\": \"SKU1\", \"name\": \"Product name 1\" }",
      "{ \"index\": { \"_index\": \"test\", \"_type\": \"product\" } }",
      "{ \"sku\": \"SKU2\", \"name\": \"Product name 2\" }",
      "",
      "# External data file",
      "http://localhost:9200",
      "POST /testindex/_bulk",
      "@data.sample.json",
      "",
      "# Global section",
      "# set the host for the whole file",
      "https://domain[:port]/...",
      "",
      "# Default (buffer scope) cUrl options.",
      "-L",
      "--connect-timeout 10",
      "",
      "# Default headers.",
      "Accept: application/json",
      "X-Header: Custom Data",
      "Authorization: Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.",
      "",
      "# you can also setup some variables, values are not url-encoded",
      "# Variables can contain static text, or reference an environment variable",
      "# variables can be used in the query paths, headers, and the body",
      "foobar = LoremIpsum",
      "city = Some%20City",
      "zip = 12345",
      "population = 42",
      "restpassword = \\$SECRET_ENV_VAR",
      "# this will not work: `someKey = ?filter[name]={\\\"startsWith\\\":\\\"jojo\\\"}`,",
      "# use below (urlencoded)",
      "someKey = ?filter[name]=%7B%22startsWith%22:%22jojo%22%7D",
      "",
      "# a -- ends global scope definition",
      "--",
      "",
      "# -- preceeds request block that uses default values from the global section.",
      "--",
      "GET /city/:city",
      "",
      "--",
      "GET /city/:city/zip/:zip",
      "",
      "# Request block that specifies its own host and extra headers.",
      "http://example.net:9200",
      "",
      "# Local cUrl opts. can override those in global section and be merged with global",
      "-k",
      "--ipv4",
      "--connect-timeout 30",
      "-b /path/to/cookie",
      "-c /path/to/cookie",
      "",
      "# ditto for headers - merge and override",
      "Xtra-Header: Some Extra.",
      "X-Header: New Data",
      "",
      "# local request, not a global",
      "POST /service",
      "var1=value"
    ],
    "description": ["Vim rest console snippet"]
  }
}
