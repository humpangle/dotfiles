[alias]
  br = branch
  brsc = branch --show-current
  cam = commit -am
  cm = commit
  co = checkout
  cz = commit --allow-empty -m
  # From https://dpwright.com/posts/2018/04/06/graphical-log-with-vimfugitive/
  lg = log --graph --pretty=format:'%Cred%h%Creset - %Cgreen(%ad)%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --abbrev-commit --date=local
  lgg = !git --no-pager log --graph --pretty=format:'%Cred%h%Creset - %Cgreen(%ad)%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --abbrev-commit --date=local
  lone = log --oneline
  pgd = push github dev
  pgm = push github master
  pl = pull
  ps = push
  psf = push --force-with-lease
  st = status
  tk = pull
  wk = worktree
  wkadd = worktree add
  wkls = worktree list
  wkrm = worktree remove
  wkrp = worktree repair
[credential]
  helper = cache --timeout 604800
[core]
  filemode = false
  editor = nvim
  excludesfile = ~/.gitignore
  # Print utf8 pathnames
  quotePath = false
[commit]
  verbose = true
[difftool]
  prompt = false
[diff]
  tool = nvim -d
  submodule = log
[merge]
  tool = fugitive
[mergetool "fugitive"]
  cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[mergetool]
  prompt = false
[push]
  followTags = true
  recurseSubmodules = on-demand # check
# [user]
#   email = you@example.com
#   name = Your Name
[init]
  defaultBranch = master
  # defaultBranch = main
# specify how pulling is reconciled
[pull]
  rebase = true
[log]
  decorate = full
[submodule]
  recurse = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[safe]
  directory = *
