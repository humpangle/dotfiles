{
  "editor.fontSize": 16, // sp8 default
  "terminal.integrated.fontSize": 16, // sp8 default
  "debug.console.fontSize": 14.5, // sp8 default

  // "editor.fontSize": 16, // sp8 thinkvision screen
  // "terminal.integrated.fontSize": 16, // sp8 thinkvision screen
  // "debug.console.fontSize": 15, // sp8 thinkvision screen

  // "editor.fontSize": 20, // sp8 capture
  // "terminal.integrated.fontSize": 20, // sp8 capture
  // "debug.console.fontSize": 17, // sp8 capture

  "workbench.colorTheme": "Default Light+",
  // "workbench.colorTheme": "Default Light+",
  // "workbench.colorTheme": "Default Dark+",
  // "workbench.colorTheme": "Default High Contrast",
  // "workbench.colorTheme": "Solarized Dark",
  // "workbench.colorTheme": "Visual Studio Dark",
  "editor.fontFamily": "CaskaydiaMono Nerd Font Mono",
  "elixirLS.dialyzerEnabled": false,
  "elixirLS.enableTestLenses": true,
  "elixirLS.fetchDeps": true,
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "editor.lineNumbers": "relative",
  "editor.renderWhitespace": "trailing",
  "editor.wordBasedSuggestions": "allDocuments",
  "editor.mouseWheelZoom": true,
  "editor.accessibilitySupport": "off",
  "editor.scrollbar.verticalScrollbarSize": 5,
  "editor.scrollbar.horizontalScrollbarSize": 5,
  "editor.renderFinalNewline": "off",
  "editor.guides.bracketPairs": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": "on",
    "strings": "on"
  },
  "editor.rulers": [
    80,
    120
  ],
  "vscode-neovim.neovimExecutablePaths.linux": "nvim",
  // "vscode-neovim.neovimExecutablePaths.darwin": "nvim",
  "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/init.lua",
  // "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.lua",
  "vscode-neovim.logLevel": "debug", // Not MacOs?
  "vscode-neovim.revealCursorScrollLine": true,
  "vscode-neovim.logOutputToConsole": true,
  "vscode-neovim.logPath": "\\\\wsl.localhost\\Ubuntu-22.04\\home\\kanmii\\dotfiles\\.___scratch-vscode-neovim.log",
  // "vscode-neovim.neovimClean": true,
  "vscode-neovim.useWSL": true, // Set to true only on windows WSL
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "security.workspace.trust.untrustedFiles": "open", // set in global-profile
  "files.trimTrailingWhitespace": true,
  "[javascript][javascriptreact][typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[json][jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[css][scss][less]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  // END Default formatter
  "[shellscript][bats]": {
    "editor.defaultFormatter": "mkhl.shfmt",
    "editor.autoClosingQuotes": "always",
    "editor.tabSize": 2,
  },
  "[html-eex]": {
    "editor.trimAutoWhitespace": false,
    "editor.snippetSuggestions": "inline",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  // START python
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    },
  },
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "isort.args": [
    "--profile",
    "black"
  ],
  "python.defaultInterpreterPath": "/Users/kanmii/.asdf/shims/python",
  "python.analysis.autoImportCompletions": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  // END python
  "[nginx]": {
    "editor.defaultFormatter": "raynigon.nginx-formatter"
  },
  "files.associations": {
    "*html.heex": "html-eex",
    ".dockerignore": "ignore",
    ".css": "tailwindcss",
    "*dockerfile": "dockerfile",
  },
  "git.openRepositoryInParentFolders": "never",
  "files.exclude": {
    "**/___outs": true,
    "**/.elixir_ls": true,
    "**/.venv": true,
    "**/.vim": true
  },
  "cSpell.userWords": [
    "callmiy",
    "neovim",
    "resolv",
    "stenote",
    "wavfile"
  ],
  "gopls": {
    "ui.semanticTokens": true
  },
  "code-runner.runInTerminal": true,
  "files.insertFinalNewline": true,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "html": "html",
  },
  "tailwindCSS.emmetCompletions": true,
  "emmet.includeLanguages": {
    "html-eex": "html"
  },
  "explorer.confirmDragAndDrop": false,
  "remote.autoForwardPortsSource": "output",
  "remote.autoForwardPorts": false,
  "explorer.compactFolders": false,
  "files.eol": "\n",
  "[markdown]": {},
  "[yaml]": {},
  "yaml.schemas": {
    "Kubernetes": [
      // "*-kb.yaml",
      // "*k8s.yaml",
    ],
    "Kind": [
      "*kind-config.yaml",
    ],
  },
  "redhat.telemetry.enabled": false,
  "aws.telemetry": false,
  // "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.enableImages": true,
  "terminal.integrated.scrollback": 100000,
  // "application.shellEnvironmentResolutionTimeout": 120, // (only macos??) global-profile
  "terminal.integrated.env.osx": {
    "IS_VSCODE_TERMINAL": "1"
  },
  "terminal.integrated.env.linux": {
    "IS_VSCODE_TERMINAL": "1"
  },
  "terminal.integrated.defaultProfile.linux": "bash",
  // "terminal.integrated.defaultProfile.osx": "bash",
  // "terminal.integrated.defaultProfile.linux": "tmux-shell",
  "terminal.integrated.profiles.linux": {
    // "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "bash",
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh"
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
    },
    "tmux-shell": {
      "path": "tmux",
      "args": [
        "new-session",
        "-A",
        "-s",
        "vscode_${workspaceFolderBasename}"
      ],
      "icon": "terminal-tmux"
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.tabs.title": "${process}-${cwdFolder}",
  "terminal.integrated.tabs.description": "${task}${separator}${local}${separator}${cwdFolder}",
  // https://stackoverflow.com/a/60023686/1437611
  // https://github.com/Tyriar/vscode-snazzy/blob/master/snazzy.json
  "workbench.colorCustomizations": {
    // The background is optional
    // "terminal.background": "#282a36",
    // "terminal.background": "#000000",
    "terminalCursor.background": "#282a36",
    "terminalCursor.foreground": "#97979b",
    "terminal.selectionBackground": "#97979b33",
    "terminal.foreground": "#eff0eb",
    "terminal.ansiBlack": "#282a36",
    "terminal.ansiRed": "#ff5c57",
    "terminal.ansiGreen": "#5af78e",
    "terminal.ansiYellow": "#f3f99d",
    "terminal.ansiBlue": "#57c7ff",
    "terminal.ansiMagenta": "#ff6ac1",
    "terminal.ansiCyan": "#9aedfe",
    "terminal.ansiWhite": "#f1f1f0",
    "terminal.ansiBrightBlack": "#686868",
    "terminal.ansiBrightRed": "#ff5c57",
    "terminal.ansiBrightGreen": "#5af78e",
    "terminal.ansiBrightYellow": "#f3f99d",
    "terminal.ansiBrightBlue": "#57c7ff",
    "terminal.ansiBrightMagenta": "#ff6ac1",
    "terminal.ansiBrightCyan": "#9aedfe",
    "terminal.ansiBrightWhite": "#eff0eb"
  },
  "window.zoomLevel": 0.6,
  "workbench.startupEditor": "none",
  "settingsSync.keybindingsPerPlatform": false, // set in global-profile
  "Lua.diagnostics.globals": [
    "vim",
  ],
  "javascript.updateImportsOnFileMove.enabled": "always",
  "security.allowedUNCHosts": [ // Works only on non-wsl windows-os files?
    "wsl.localhost"
  ],
  "accessibility.underlineLinks": true,
  "window.openFoldersInNewWindow": "on",
  "window.newWindowProfile": null, // | "MacOs" // set in global-profile
  "settingsSync.ignoredSettings": [ // global-profile
    "window.newWindowProfile"
  ],
  "remote.SSH.enableX11Forwarding": false, // global-profile
  "code-runner.executorMapByFileExtension": {
    ".vb": "cd $dir && vbc /nologo $fileName && $dir$fileNameWithoutExt",
    ".vbs": "cscript //Nologo",
    ".scala": "scala",
    ".jl": "julia",
    ".cr": "crystal",
    ".ml": "ocaml",
    ".zig": "zig run",
    ".exs": "mix run --no-mix-exs",
    ".hx": "haxe --cwd $dirWithoutTrailingSlash --run $fileNameWithoutExt",
    ".rkt": "racket",
    ".scm": "csi -script",
    ".ahk": "autohotkey",
    ".au3": "autoit3",
    ".kt": "cd $dir && kotlinc $fileName -include-runtime -d $fileNameWithoutExt.jar && java -jar $fileNameWithoutExt.jar",
    ".kts": "kotlinc -script",
    ".dart": "dart",
    ".pas": "cd $dir && fpc $fileName && $dir$fileNameWithoutExt",
    ".pp": "cd $dir && fpc $fileName && $dir$fileNameWithoutExt",
    ".d": "cd $dir && dmd $fileName && $dir$fileNameWithoutExt",
    ".hs": "runhaskell",
    ".nim": "nim compile --verbosity:0 --hints:off --run",
    ".csproj": "dotnet run --project",
    ".fsproj": "dotnet run --project",
    ".lisp": "sbcl --script",
    ".kit": "kitc --run",
    ".v": "v run",
    ".vsh": "v run",
    ".sass": "sass --style expanded",
    ".cu": "cd $dir && nvcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    ".ring": "ring",
    ".sml": "cd $dir && sml $fileName",
    ".mojo": "mojo run",
    ".erl": "escript",
    ".spwn": "spwn build",
    ".pkl": "cd $dir && pkl eval -f yaml $fileName -o $fileNameWithoutExt.yaml",
    ".gleam": "gleam run -m $fileNameWithoutExt"
  },
  "files.watcherExclude": { // set in global-profile
    "**/.elixir_ls/**": true,
    "**/.venv/**": true
  },
  "workbench.settings.applyToAllProfiles": [ // set in global-profile
    "files.watcherExclude"
  ],
  // "workbench.activityBar.location": "hidden",
  // "window.menuBarVisibility": "compact"
}
