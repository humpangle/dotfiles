{
  "workbench.colorTheme": "Default Light+",
  // "workbench.colorTheme": "Default Light+",
  // "workbench.colorTheme": "Default Dark+",
  // "workbench.colorTheme": "Default High Contrast",
  // "workbench.colorTheme": "Solarized Dark",
  // "workbench.colorTheme": "Visual Studio Dark",
  "editor.fontFamily": "CaskaydiaMono Nerd Font Mono",
  "elixirLS.dialyzerEnabled": false,
  "elixirLS.enableTestLenses": true,
  "elixirLS.fetchDeps": true,
  "editor.fontSize": 16,
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "editor.lineNumbers": "relative",
  "editor.renderWhitespace": "trailing",
  "editor.wordBasedSuggestions": "allDocuments",
  "editor.mouseWheelZoom": true,
  "editor.accessibilitySupport": "off",
  "editor.scrollbar.verticalScrollbarSize": 5,
  "editor.scrollbar.horizontalScrollbarSize": 5,
  "editor.renderFinalNewline": "off",
  "editor.quickSuggestions": {
    "other": true,
    "comments": "on",
    "strings": "on"
  },
  "editor.rulers": [
    120,
    80,
  ],
  "vscode-neovim.neovimExecutablePaths.linux": "nvim",
  // "vscode-neovim.neovimExecutablePaths.darwin": "nvim",
  "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/init.lua",
  // "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.lua",
  "vscode-neovim.logLevel": "debug",
  "vscode-neovim.revealCursorScrollLine": true,
  "vscode-neovim.logOutputToConsole": true,
  "vscode-neovim.logPath": "\\\\wsl.localhost\\Ubuntu-22.04\\home\\kanmii\\dotfiles\\.___scratch-vscode-neovim.log",
  // "vscode-neovim.neovimClean": true,
  "vscode-neovim.useWSL": true,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "security.workspace.trust.untrustedFiles": "open",  // set in global-profile
  "files.trimTrailingWhitespace": true,
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescript]": {
    // "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[shellscript]": {
    "editor.autoClosingQuotes": "always",
    "editor.tabSize": 2,
  },
  "[html-eex]": {
    "editor.trimAutoWhitespace": false,
    "editor.snippetSuggestions": "inline",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true
  },
  "[html]": {
    // "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[nginx]": {
    "editor.defaultFormatter": "raynigon.nginx-formatter"
  },
  "files.associations": {
    "*html.heex": "html-eex",
    ".dockerignore": "ignore",
    ".css": "tailwindcss",
    "*dockerfile": "dockerfile",
  },
  "git.openRepositoryInParentFolders": "never",
  "files.exclude": {
    "**/___outs": true,
    "**/.elixir_ls": true,
    "**/.vim": true
  },
  "cSpell.userWords": [
    "callmiy",
    "neovim",
    "resolv",
    "stenote",
    "wavfile"
  ],
  "gopls": {
    "ui.semanticTokens": true
  },
  "code-runner.runInTerminal": true,
  "files.insertFinalNewline": true,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "html": "html",
  },
  "tailwindCSS.emmetCompletions": true,
  "explorer.confirmDragAndDrop": false,
  "remote.autoForwardPortsSource": "output",
  "remote.autoForwardPorts": false,
  "explorer.compactFolders": false,
  "files.eol": "\n",
  "[javascript]": {
    // "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    // "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    // "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "yaml.schemas": {
    "Kubernetes": [
      // "*-kb.yaml",
      // "*k8s.yaml",
    ],
    "Kind": [
      "*kind-config.yaml",
    ],
  },
  "redhat.telemetry.enabled": false,
  "aws.telemetry": false,
  "settingsSync.ignoredSettings": [],
  // "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.fontSize": 15, // small screen
  // "terminal.integrated.fontSize": 17, // big screen
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.enableImages": true,
  "terminal.integrated.scrollback": 100000,
  // "application.shellEnvironmentResolutionTimeout": 120, // macos
  "terminal.integrated.env.osx": {
    "IS_VSCODE_TERMINAL": "1"
  },
  "terminal.integrated.env.linux": {
    "IS_VSCODE_TERMINAL": "1"
  },
  "terminal.integrated.defaultProfile.linux": "bash",
  // "terminal.integrated.defaultProfile.osx": "bash",
  // "terminal.integrated.defaultProfile.linux": "tmux-shell",
  "terminal.integrated.profiles.linux": {
    // "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "bash",
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh"
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
    },
    "tmux-shell": {
      "path": "tmux",
      "args": [
        "new-session",
        "-A",
        "-s",
        "vscode_${workspaceFolderBasename}"
      ],
      "icon": "terminal-tmux"
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.tabs.title": "${process}-${cwdFolder}",
  "terminal.integrated.tabs.description": "${task}${separator}${local}${separator}${cwdFolder}",
  // https://stackoverflow.com/a/60023686/1437611
  // https://github.com/Tyriar/vscode-snazzy/blob/master/snazzy.json
  "workbench.colorCustomizations": {
    // The background is optional
    // "terminal.background": "#282a36",
    // "terminal.background": "#000000",
    "terminalCursor.background": "#282a36",
    "terminalCursor.foreground": "#97979b",
    "terminal.selectionBackground": "#97979b33",
    "terminal.foreground": "#eff0eb",
    "terminal.ansiBlack": "#282a36",
    "terminal.ansiRed": "#ff5c57",
    "terminal.ansiGreen": "#5af78e",
    "terminal.ansiYellow": "#f3f99d",
    "terminal.ansiBlue": "#57c7ff",
    "terminal.ansiMagenta": "#ff6ac1",
    "terminal.ansiCyan": "#9aedfe",
    "terminal.ansiWhite": "#f1f1f0",
    "terminal.ansiBrightBlack": "#686868",
    "terminal.ansiBrightRed": "#ff5c57",
    "terminal.ansiBrightGreen": "#5af78e",
    "terminal.ansiBrightYellow": "#f3f99d",
    "terminal.ansiBrightBlue": "#57c7ff",
    "terminal.ansiBrightMagenta": "#ff6ac1",
    "terminal.ansiBrightCyan": "#9aedfe",
    "terminal.ansiBrightWhite": "#eff0eb"
  },
  "window.zoomLevel": 0.6,
  "workbench.startupEditor": "none",
  "window.newWindowProfile": null, // set in global-profile
  // "window.newWindowProfile": "MacOs",  // set in global-profile
  "settingsSync.keybindingsPerPlatform": false, // set in global-profile
  "Lua.diagnostics.globals": [
    "vim",
  ],
  "javascript.updateImportsOnFileMove.enabled": "always",
  "security.allowedUNCHosts": [
    "wsl.localhost"
  ],
  "accessibility.underlineLinks": true,
  // "workbench.activityBar.location": "hidden",
  // "window.menuBarVisibility": "compact"
}
